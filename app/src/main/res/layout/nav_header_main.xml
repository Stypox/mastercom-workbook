<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="@dimen/navigation_header_height"
    android:background="@drawable/drawer_header_background"
    android:gravity="bottom"
    android:orientation="vertical"
    android:padding="@dimen/navigation_header_padding"
    android:theme="@style/ThemeOverlay.AppCompat.Dark">

    <TextView
        android:id="@+id/navigationFullName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="@dimen/navigation_header_vertical_spacing"
        android:textAppearance="@style/TextAppearance.AppCompat.Body1"
        tools:text="John Smith" />

    <TextView
        android:id="@+id/navigationAPIUrl"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:text="server.registroelettronico.com" />

</LinearLayout>
